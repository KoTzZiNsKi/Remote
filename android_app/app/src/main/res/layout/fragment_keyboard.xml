<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="12dp">

    <EditText
        android:id="@+id/keyboard_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:background="@drawable/bg_glass_edit"
        android:hint="@string/hint_password"
        android:inputType="textMultiLine|textCapSentences"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="#88FFFFFF"
        android:imeOptions="actionDone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp">

        <Button
            android:id="@+id/mod_shift"
            style="@style/Widget.RemoteMouse.Button.Glass.Compact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Shift" />

        <Button
            android:id="@+id/mod_ctrl"
            style="@style/Widget.RemoteMouse.Button.Glass.Compact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Ctrl" />

        <Button
            android:id="@+id/mod_alt"
            style="@style/Widget.RemoteMouse.Button.Glass.Compact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Alt" />

        <Button
            android:id="@+id/mod_win"
            style="@style/Widget.RemoteMouse.Button.Glass.Compact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Win" />

        <ImageButton
            android:id="@+id/btn_layout_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_modifier_key"
            android:src="@drawable/ic_globe"
            android:contentDescription="@string/connect" />
    </LinearLayout>
</LinearLayout>
