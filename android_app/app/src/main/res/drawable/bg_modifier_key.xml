<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item><shape android:shape="rectangle"><solid android:color="#40000000" /><corners android:radius="19dp" /></shape></item>
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/glass_border" />
                    <solid android:color="@color/accent_modifier_pressed" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_panel" />
            <stroke android:width="1dp" android:color="@color/glass_border" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
