<Window x:Class="RemoteMouse.PC.IpAndQrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IP и QR-код" Height="500" Width="340"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="{StaticResource SoftBgBrush}" CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource CardBgBrush}" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="IP и QR-код" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="16,0" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            </Border>
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="TbIp" Text="" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                    <Button x:Name="BtnCopy" Width="36" Height="36" Margin="8,0,0,0" Click="BtnCopy_OnClick" ToolTip="Копировать IP" Style="{StaticResource IconButtonCopy}">
                        <Path Data="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z" Fill="#757575" Stretch="Uniform" Width="18" Height="18"/>
                    </Button>
                </StackPanel>
                <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,12">
                    <Button x:Name="BtnPrevIp" Width="36" Height="36" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-44,0,0,0" Click="BtnPrevIp_OnClick" ToolTip="Предыдущий IP" Style="{StaticResource IconButtonArrow}" Content="‹" FontSize="18" Visibility="Collapsed" IsEnabled="False"/>
                    <Border Background="White" Padding="10" CornerRadius="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.15"/>
                        </Border.Effect>
                        <Image x:Name="QrImage" Width="200" Height="200" Stretch="Uniform"/>
                    </Border>
                    <Button x:Name="BtnNextIp" Width="36" Height="36" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-44,0" Click="BtnNextIp_OnClick" ToolTip="Следующий IP" Style="{StaticResource IconButtonArrow}" Content="›" FontSize="18" Visibility="Collapsed" IsEnabled="False"/>
                </Grid>
        <TextBlock Grid.Row="2" x:Name="TbHint" Text="Введите IP на телефоне или отсканируйте QR-код для подключения." 
                   TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,16" Foreground="#757575"/>
                <Button Grid.Row="3" Content="Готово" Style="{StaticResource ButtonPrimary}" Click="BtnDone_OnClick" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</Window>
