<Window x:Class="RemoteMouse.PC.TrayMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" Deactivated="Window_Deactivated">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RemoteMouse.PC;component/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="#2D2D2D" CornerRadius="10" Padding="6" MinWidth="220"
            BorderBrush="#404040" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.4" Direction="270"/>
        </Border.Effect>
        <StackPanel>
            <Button x:Name="BtnShowIp" Content="Показать IP и QR-код..." Style="{StaticResource TrayMenuItemStyle}" Click="BtnShowIp_Click"/>
            <Button x:Name="BtnSettings" Content="Настройки..." Style="{StaticResource TrayMenuItemStyle}" Click="BtnSettings_Click"/>
            <Button x:Name="BtnUpdates" Content="Проверить обновления..." Style="{StaticResource TrayMenuItemStyle}" Click="BtnUpdates_Click"/>
            <Button x:Name="BtnHelp" Content="Справка" Style="{StaticResource TrayMenuItemStyle}" Click="BtnHelp_Click"/>
            <StackPanel x:Name="PanelHelpSub" Margin="20,0,0,0" Visibility="Collapsed">
                <Button x:Name="BtnHelpStart" Content="Начало работы" Style="{StaticResource TrayMenuItemStyle}" Click="BtnHelpStart_Click"/>
                <Button x:Name="BtnFaq" Content="FAQ" Style="{StaticResource TrayMenuItemStyle}" Click="BtnFaq_Click"/>
            </StackPanel>
            <Border Height="1" Background="#404040" Margin="4,2"/>
            <Button x:Name="BtnExit" Content="Выход" Style="{StaticResource TrayMenuItemStyle}" Click="BtnExit_Click"/>
        </StackPanel>
    </Border>
</Window>
