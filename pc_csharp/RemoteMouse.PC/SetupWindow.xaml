<Window x:Class="RemoteMouse.PC.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Начало работы" Height="440" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="{StaticResource SoftBgBrush}" CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource CardBgBrush}" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Setup" VerticalAlignment="Center" Margin="16,0" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                    <Button Content="×" Style="{StaticResource TitleBarButton}" HorizontalAlignment="Right" Click="BtnCloseChrome_OnClick"/>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="StepContent" Grid.Row="0" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
            <Ellipse x:Name="Dot1" Width="8" Height="8" Fill="#2196F3" Margin="0,0,4,0"/>
            <Ellipse x:Name="Dot2" Width="8" Height="8" Fill="#E0E0E0" Margin="4,0,4,0"/>
            <Ellipse x:Name="Dot3" Width="8" Height="8" Fill="#E0E0E0" Margin="4,0,0,0"/>
        </StackPanel>
        <Grid Grid.Row="2">
                <Button x:Name="BtnBack" Content="Назад" Style="{StaticResource ButtonSecondary}" Click="BtnBack_OnClick" HorizontalAlignment="Left" Visibility="Collapsed"/>
                <Button x:Name="BtnNext" Content="Далее" Style="{StaticResource ButtonPrimary}" Click="BtnNext_OnClick" HorizontalAlignment="Right"/>
            </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
