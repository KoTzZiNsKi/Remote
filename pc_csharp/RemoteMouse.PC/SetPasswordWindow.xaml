<Window x:Class="RemoteMouse.PC.SetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Установить пароль" Height="240" Width="320"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="{StaticResource SoftBgBrush}" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.12"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource CardBgBrush}" CornerRadius="10,10,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Установить пароль" VerticalAlignment="Center" Margin="12,0" FontSize="13" Foreground="{StaticResource TextBrush}"/>
            </Border>
            <StackPanel Grid.Row="1" Margin="12,10,12,12">
                <PasswordBox x:Name="EditPassword" PasswordChar="*" MaxLength="64" Style="{StaticResource SoftPasswordBox}" Margin="0,0,0,6"/>
                <PasswordBox x:Name="EditPasswordConfirm" PasswordChar="*" MaxLength="64" Style="{StaticResource SoftPasswordBox}" Margin="0,0,0,4"/>
                <TextBlock Text="* Пароль должен содержать не менее 6 символов" Foreground="#757575" FontSize="11" Margin="0,0,0,4"/>
                <TextBlock x:Name="TbError" Text="" Foreground="#D32F2F" FontSize="12" Margin="0,0,0,10" Visibility="Collapsed" TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnSave" Content="Сохранить пароль" Style="{StaticResource ButtonPrimary}" Click="BtnSave_OnClick" Margin="0,0,6,0" Padding="12,6"/>
                    <Button x:Name="BtnReset" Content="Сбросить" Style="{StaticResource ButtonSecondary}" Click="BtnReset_OnClick" Margin="0,0,6,0" Padding="12,6"/>
                    <Button x:Name="BtnCancel" Content="Отмена" Style="{StaticResource ButtonSecondary}" Click="BtnCancel_OnClick" Padding="12,6"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
