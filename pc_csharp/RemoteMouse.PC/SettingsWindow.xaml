<Window x:Class="RemoteMouse.PC.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="640" Width="480"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="{StaticResource SoftBgBrush}" CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource CardBgBrush}" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <Border x:Name="TitleIconBorder" Width="20" Height="20" CornerRadius="10" Visibility="Collapsed" Margin="0,0,10,0">
                            <Border.Clip>
                                <EllipseGeometry RadiusX="10" RadiusY="10" Center="10,10"/>
                            </Border.Clip>
                            <Image x:Name="TitleIcon" Stretch="Fill"/>
                        </Border>
                        <TextBlock Text="Настройки" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                    <Button Content="×" Style="{StaticResource TitleBarButton}" HorizontalAlignment="Right" Click="BtnCloseChrome_OnClick"/>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Общие" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12" Foreground="{StaticResource TextBrush}"/>
        <Border Grid.Row="1" Background="{StaticResource CardBgBrush}" Padding="14" Margin="0,0,0,8" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock x:Name="TbPcName" Text="" FontSize="13" Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Имя и IP этого компьютера" FontSize="11" Foreground="#757575" Margin="0,2,0,0"/>
                    <TextBlock x:Name="TbPcModel" Text="" FontSize="11" Foreground="#757575" Margin="0,2,0,0" Visibility="Collapsed"/>
                </StackPanel>
                <Button Grid.Column="1" x:Name="BtnShowQr" Content="Показать QR-код" Style="{StaticResource ButtonSecondary}" Click="BtnShowQr_OnClick" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="{StaticResource CardBgBrush}" Padding="14" Margin="0,0,0,8" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Последнее устройство" FontSize="13"/>
                    <TextBlock Text="Последнее подключённое устройство" FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
                </StackPanel>
                <TextBlock Grid.Column="1" x:Name="TbLastDevice" Text="Нет" VerticalAlignment="Center" Foreground="Gray"/>
            </Grid>
        </Border>
        <Border Grid.Row="3" Background="{StaticResource CardBgBrush}" Padding="14" Margin="0,0,0,16" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Запуск при старте" FontSize="13" Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Запускать Remote вместе с компьютером" FontSize="11" Foreground="#757575" Margin="0,2,0,0"/>
                </StackPanel>
                <CheckBox Grid.Column="1" x:Name="CbLaunchAtStartup" Style="{StaticResource ToggleSwitchStyle}" VerticalAlignment="Center" Checked="CbLaunch_Changed" Unchecked="CbLaunch_Changed"/>
            </Grid>
        </Border>
        <Border Grid.Row="4" Background="{StaticResource CardBgBrush}" Padding="14" Margin="0,0,0,8" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Добавить ярлык на рабочий стол?" FontSize="13" Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Создать ярлык программы на рабочем столе для быстрого запуска" FontSize="11" Foreground="#757575" Margin="0,2,0,0" TextWrapping="Wrap"/>
                </StackPanel>
                <CheckBox Grid.Column="1" x:Name="CbDesktopShortcut" Style="{StaticResource ToggleSwitchStyle}" VerticalAlignment="Center" Checked="CbDesktopShortcut_Changed" Unchecked="CbDesktopShortcut_Changed"/>
            </Grid>
        </Border>
        <TextBlock Grid.Row="5" Text="Безопасность" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12" Foreground="{StaticResource TextBrush}"/>
        <Border Grid.Row="6" Background="{StaticResource CardBgBrush}" Padding="14" Margin="0,0,0,8" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Пароль подключения" FontSize="13" Foreground="{StaticResource TextBrush}"/>
                    <TextBlock x:Name="TbPasswordHint" Text="Пароль не установлен. В публичных сетях рекомендуется установить пароль." FontSize="11" Foreground="#757575" Margin="0,2,0,0" TextWrapping="Wrap"/>
                </StackPanel>
                <Button Grid.Column="1" x:Name="BtnSetPassword" Content="Установить пароль" Style="{StaticResource ButtonSecondary}" Click="BtnSetPassword_OnClick" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Border>
        <Border Grid.Row="7" Background="{StaticResource CardBgBrush}" Padding="14" Margin="0,0,0,0" VerticalAlignment="Top" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Тихий режим" FontSize="13" Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Не отвечать на поиск в сети. Подключение только по IP или QR-коду." FontSize="11" Foreground="#757575" Margin="0,2,0,0" TextWrapping="Wrap"/>
                </StackPanel>
                <CheckBox Grid.Column="1" x:Name="CbSilentMode" Style="{StaticResource ToggleSwitchStyle}" VerticalAlignment="Center" Checked="CbSilent_Changed" Unchecked="CbSilent_Changed"/>
            </Grid>
        </Border>
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,16,0,0">
            <TextBlock Text="Version " VerticalAlignment="Center" Foreground="Gray"/>
            <TextBlock x:Name="TbVersion" Text="1.0" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
